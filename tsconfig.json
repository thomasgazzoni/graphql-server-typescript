{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": "/",
    "sourceMap": true,
    "declaration": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2016",
      "esnext.asynciterable",
      "dom"
    ]
  },
  "include": [
      "src/*.ts"
  ],
  "exclude": [
    "node_modules",
    "_old",
    "**/*.spec.ts"
]
}
